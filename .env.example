# Hacker News 爬虫配置

# API 设置
HN_API_BASE=https://hacker-news.firebaseio.com/v0
FETCH_LIMIT=30
REQUEST_TIMEOUT=10

# AI 关键词（逗号分隔）
AI_KEYWORDS=ai,artificial intelligence,machine learning,ml,deep learning,llm,gpt,openai,claude,chatgpt,neural

# 数据目录
DATA_DIR=data

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 数据库配置（阶段 2）
# SQLite（默认，开发环境）
DATABASE_URL=sqlite+aiosqlite:///./data/hackernews.db
SYNC_DATABASE_URL=sqlite:///./data/hackernews.db

# PostgreSQL（生产环境）
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/hackernews
# SYNC_DATABASE_URL=postgresql://user:password@localhost:5432/hackernews

DB_ECHO=false
